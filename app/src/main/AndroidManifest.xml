<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nedvyha.themoviedb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.film_list.view.ListFilmActivity"
            android:label="@string/title_activity_popular"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.genres.view.ListGenresActivity"
            android:label="@string/title_activity_gennres"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.film_details.view.FilmDetailsActivity"
            android:label="@string/title_activity_film_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".activity.FavouriteActivity"></activity>
    </application>

</manifest>