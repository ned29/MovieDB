<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout">
        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/poster_image"
            android:layout_width="@dimen/size_200_px"
            android:layout_height="@dimen/size_300_px"
            android:paddingBottom="@dimen/text_10_sp"
            android:paddingRight="@dimen/text_10_sp"
            android:paddingTop="@dimen/text_10_sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_17_sp"
            android:layout_toRightOf="@+id/poster_image"/>

        <TextView
            android:id="@+id/overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_10_sp"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/poster_image"
            />
    </RelativeLayout>
</LinearLayout>